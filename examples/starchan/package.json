{
  "name": "ljas-starchan",
  "version": "1.0.0",
  "description": "A textboard powered by Express and React server-side rendering.",
  "main": "build/development/backend/server.js",
  "author": "Matthew Lean <matt@mattlean.com> (https://mattlean.com)",
  "license": "MIT",
  "scripts": {
    "back:build": "npm run backend:build",
    "back:build:debug": "npm run backend:build:debug",
    "back:build:production": "npm run backend:build:production",
    "back:build:production:debug": "npm run backend:build:production:debug",
    "back:build:stats": "npm run backend:build:stats",
    "back:build:watch": "npm run backend:build:watch",
    "back:dev": "npm run backend:dev",
    "back:test": "npm run backend:test",
    "back:test:watch": "npm run backend:test:watch",
    "backend:build": "webpack --config webpack/backend.config.js --mode development",
    "backend:build:debug": "node --inspect-brk=0.0.0.0:9231 node_modules/.bin/webpack --config webpack/backend.config.js --mode development",
    "backend:build:production": "NODE_ENV=production webpack --config webpack/backend.config.js --mode production",
    "backend:build:production:debug": "NODE_ENV=production node --inspect-brk=0.0.0.0:9231 node_modules/.bin/webpack --config webpack/backend.config.js --mode production",
    "backend:build:stats": "npm run backend:build:production -- --json > stats.backend.json",
    "backend:build:watch": "nodemon --config nodemon.backend.json --exec \"npm run backend:build -- --watch\"",
    "backend:dev": "concurrently --names \"📦 webpack (back),🌐 express\" \"npm run backend:build:watch\" \"npm run start:debug\"",
    "backend:test": "npm run test src/backend",
    "backend:test:watch": "npm run test src/backend -- --watch || npm run test src/backend -- --watchAll",
    "build": "npm run frontend:build && npm run backend:build",
    "build:production": "npm run frontend:build:production && npm run backend:build:production",
    "check-types": "tsc",
    "dev": "concurrently --names \"🎨 dev-server (front),📦 webpack (back),🌐 express\" \"npm run frontend:dev\" \"npm run backend:build:watch\" \"npm run start:debug\"",
    "dev:production": "nodemon --config nodemon.production.json --exec \"npm run build:production && npm run start:production:debug\"",
    "format": "npm run format:check",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "front:build": "npm run frontend:build",
    "front:build:debug": "npm run frontend:build:debug",
    "front:build:production": "npm run frontend:build:production",
    "front:build:production:debug": "npm run frontend:build:production:debug",
    "front:build:stats": "npm run frontend:build:stats",
    "front:dev": "npm run frontend:dev",
    "front:test": "npm run frontend:test",
    "front:test:watch": "npm run frontend:test:watch",
    "frontend:build": "webpack --config webpack/frontend.config.js --mode development",
    "frontend:build:debug": "node --inspect-brk=0.0.0.0:9231 node_modules/.bin/webpack --config webpack/frontend.config.js --mode development",
    "frontend:build:production": "NODE_ENV=production webpack --config webpack/frontend.config.js --mode production",
    "frontend:build:production:debug": "NODE_ENV=production node --inspect-brk=0.0.0.0:9231 node_modules/.bin/webpack --config webpack/frontend.config.js --mode production",
    "frontend:build:stats": "npm run frontend:build:production -- --json > stats.frontend.json",
    "frontend:dev": "nodemon --config nodemon.frontend.json --exec \"webpack serve --config webpack/frontend.config.js --mode development\"",
    "frontend:test": "npm run test src/frontend",
    "frontend:test:watch": "npm run test src/frontend -- --watch || npm run test src/frontend -- --watchAll",
    "gen-dev-data": "ts-node dev-scripts/genDevData.ts",
    "gen-mock-thread-list-res": "ts-node dev-scripts/genMockThreadListRes.ts",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:styles": "stylelint \"src/frontend/**/*.css\"",
    "lint:styles:fix": "npm run lint:styles -- --fix",
    "lint-staged": "lint-staged",
    "prisma": "prisma",
    "prisma:studio": "npm run prisma studio -- --browser none -p 5555",
    "start": "node build/development/backend/server.js",
    "start:debug": "nodemon --config nodemon.development.json --inspect=0.0.0.0:9229 build/development/backend/server.js",
    "start:production": "node build/production/backend/server.js",
    "start:production:debug": "node --inspect=0.0.0.0:9229 build/production/backend/server.js",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:coverage:open": "open coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk=0.0.0.0:9230 node_modules/.bin/jest --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:debug": "npm run test:e2e -- --debug",
    "test:e2e:dev": "npm run test:e2e -- --ui",
    "test:e2e:install": "playwright install --with-deps",
    "test:e2e:report": "playwright show-report --host 0.0.0.0 --port 9323",
    "test:watch": "npm run test -- --watch || npm run test -- --watchAll",
    "ts-node": "ts-node"
  },
  "engines": {
    "node": ">=20.9 <21"
  },
  "dependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.3",
    "@babel/preset-typescript": "^7.21.5",
    "@prisma/client": "^4.16.2",
    "@reduxjs/toolkit": "^1.9.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.2",
    "compression": "^1.7.4",
    "copy-webpack-plugin": "^11.0.0",
    "cors": "^2.8.5",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-validator": "^7.0.1",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "glob": "^10.3.10",
    "helmet": "^7.1.0",
    "html-webpack-plugin": "^5.5.1",
    "ljas-webpack": "^0.1.0",
    "mini-css-extract-plugin": "^2.7.6",
    "moment": "^2.29.4",
    "mongoose": "^8.8.3",
    "morgan": "^1.10.0",
    "postcss": "^8.4.29",
    "postcss-loader": "^7.3.3",
    "prisma": "^4.16.2",
    "purgecss-webpack-plugin": "^5.0.0",
    "raw-loader": "^4.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.16.0",
    "typescript": "~5.3.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "webpack-merge": "^5.9.0",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.2",
    "@types/react-test-renderer": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-playwright": "^1.6.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "global-jsdom": "^9.2.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fixed-jsdom": "^0.0.2",
    "jest-mock-extended": "^3.0.4",
    "lorem-ipsum": "^2.0.8",
    "msw": "^2.2.2",
    "nodemon": "^2.0.22",
    "prettier": "3.2.5",
    "react-refresh": "^0.14.0",
    "react-test-renderer": "^18.2.0",
    "snapshot-diff": "^0.10.0",
    "style-loader": "^3.3.3",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "undici": "^5.22.0",
    "webpack-dev-server": "^5.0.4"
  },
  "private": true
}
