    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Running Server",
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "port": 9229,
            "skipFiles": ["<node_internals>/**"],
            "remoteRoot": "/code"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start New Server",
            "program": "${workspaceFolder}/build/app.js",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
